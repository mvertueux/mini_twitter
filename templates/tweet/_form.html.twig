				<button type="submit" class=" ml-auto shrink-0 bg-[#eff3f4] text-[#000000] px-5 py-2 rounded-full font-semibold cursor-pointer hover:bg-[#c2c2c2] hover:text-[#000000] transition ">
					Poster
				</button>
			</div>
			{{ form_errors(form.content) }}
		</div>
	</div>
</div>
